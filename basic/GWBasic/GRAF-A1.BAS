10  REM * * * GRAFICOS * * *
15  REM 640x200 pixels
20  SCREEN 8
30  CLS
40  REM RETA
50  FOR X = -100 TO 60
60  Y = X + 30
70  V = 100 - Y
80  H = 128 + X
90  PSET (H, V), 14
100 NEXT X
110 INPUT "ENTER PARA CONTINUAR...", RESP$
120 CLS
130 REM CICLOIDE
140 FOR T = 0 TO 6.28 STEP .05
150 M = SIN(T)
160 X = 40 * (T - M)
170 Y = 40 * (1 - COS(T))
180 V = 100 - Y
190 H = X
200 PSET (H, V), 14
210 NEXT T
220 INPUT "ENTER PARA CONTINUAR...", RESP$
230 CLS
240 REM CRUCIFORME
250 FOR A = 0 TO 6.28 STEP .025
260 IF A > 0 AND A < .05 THEN GOTO 400
270 IF A > .735 AND A < .835 THEN GOTO 400
280 IF A > 1.45 AND A < 1.67 THEN GOTO 400
290 IF A > 2.305 AND A < 2.405 THEN GOTO 400
300 IF A > 3.0 AND A < 3.24 THEN GOTO 400
310 IF A > 3.875 AND A < 3.975 THEN GOTO 400
320 IF A > 4.6 AND A < 4.76 THEN GOTO 400
330 IF A > 5.445 AND A < 5.545 THEN GOTO 400
340 IF A > 6.175 AND A < 6.28 THEN GOTO 400
350 IF SIN(2 * A) = 0 THEN GOTO 400
360 R = 15 / SIN(2 * A)
370 H = 128 + R * COS(A)
380 V = 100 + R * SIN(A)
390 PSET (H, V), 14
400 REM CONT
410 REM * NAO FAZ NADA
420 NEXT A
430 INPUT "ENTER PARA CONTINUAR...", RESP$
440 CLS
450 REM HIPOCICLOIDE (star)
460 FOR T = 0 TO 12.56 STEP .05
470 X = 30 * COS(T) + 20 * COS(1.5 * T)
480 Y = 30 * SIN(T) - 20 * SIN(1.5 * T)
490 V = 100 - Y
500 H = 128 + X
510 PSET (H, V), 2
520 NEXT T
530 INPUT "ENTER PARA CONTINUAR...", RESP$
540 CLS
550 END
