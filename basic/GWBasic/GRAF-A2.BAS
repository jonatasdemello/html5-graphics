10 REM * * * GRAFICOS * * *
20 REM 640x200 pixels
30 SCREEN 8
40 CLS
50 COR=10
60 REM * * * RETA * * *
70 FOR X = -100 TO 60
80   Y = X + 30
90   V = 100 - Y
100   H = 128 + X
110   PSET (H, V), COR
120 NEXT X
130 INPUT "RETA", RESP$
140 CLS
150 REM * * * CICLOIDE * * *
160 FOR T = 0 TO 6.28 STEP .05
170   M = SIN(T)
180   X = 40 * (T - M)
190   Y = 40 * (1 - COS(T))
200   V = 100 - Y
210   H = X
220   PSET (H, V), COR
230 NEXT T
240 INPUT "CICLOIDE", RESP$
250 CLS
260 REM * * * HIPOCICLOIDE * * *
270 FOR T = 0 TO 12.56 STEP .05
280   X = 30 * COS(T) + 20 * COS(1.5 * T)
290   Y = 30 * SIN(T) - 20 * SIN(1.5 * T)
300   V = 100 - Y
310   H = 128 + X
320   PSET (H, V), COR
330 NEXT T
340 INPUT "HIPOCICLOIDE", RESP$
350 CLS
360 REM * * * CRUCIFORME * * *
370 FOR A = 0 TO 6.28 STEP .025
380   P=1
390   IF A > 0 AND A < .05 THEN P=0
400   IF A > .735 AND A < .835 THEN P=0
410   IF A > 1.45 AND A < 1.67 THEN P=0
420   IF A > 2.305 AND A < 2.405 THEN P=0
430   IF A > 3.0 AND A < 3.24 THEN P=0
440   IF A > 3.875 AND A < 3.975 THEN P=0
450   IF A > 4.6 AND A < 4.76 THEN P=0
460   IF A > 5.445 AND A < 5.545 THEN P=0
470   IF A > 6.175 AND A < 6.28 THEN P=0
480   IF SIN(2 * A) = 0 THEN P=0
500   R = 15 / SIN(2 * A)
510   H = 128 + R * COS(A)
520   V = 100 + R * SIN(A)
530   IF P = 1 THEN PSET (H, V), COR
540 NEXT A
550 INPUT "CRUCIFORME", RESP$
560 END
